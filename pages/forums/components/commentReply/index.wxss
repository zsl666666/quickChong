/* pages/forums/components/commentReply/index.wxss */
.top-cont {
  position: relative;
  height: 72rpx;
  text-align: center;
}
.close-icon {
  position: absolute;
  right: 34rpx;
  top: calc(36rpx - 10px);
}
.reply-detail-title {
  text-align: center;
  line-height: 72rpx;
}
.comment-every-content {
  padding: 32rpx 34rpx;
  display: flex;
}
.comment-profile-image {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
}
.comment-content-right {
  flex: 1;
  margin-left: 14rpx;
}
.comment-user-name {
  font-size: 26rpx;
  font-family: PingFangSC, PingFang SC;
  font-weight: 500;
  color: rgba(0,0,0,0.4);
  line-height: 38rpx;
}
.comment-main-content {
  font-size: 28rpx;
  font-family: PingFangSC, PingFang SC;
  font-weight: 400;
  color: rgba(0,0,0,0.7);
  line-height: 40rpx;
  margin-top: 7rpx;
  margin-bottom: 10rpx;
}
.date-and-collect {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  font-family: PingFangSC, PingFang SC;
  font-weight: 400;
  color: rgba(0,0,0,0.4);
  line-height: 34rpx;
}
.collect-icon {
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
}
.reply-class {
  background: #f3f3f3;
}