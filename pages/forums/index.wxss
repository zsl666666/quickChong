/* pages/forums/index.wxss */
.forums {
  background: #FAFAFA;
  min-height: 100vh;
  overflow-y: auto;
}
.top-custom-nav-bar-title {
  font-weight: bolder;
}
.forums-search-wrap {
  box-sizing: border-box;
  padding: 18rpx 33rpx 18rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #FFFFFF;
}
.search-box {
  flex: 1;
}
.forums-search-wrap .van-search {
  padding: 0rpx !important;
  flex: 1 !important;
}
.search-input-style {
  background: #F7F8FA;
}
.search-icon {
  display: inline-block;
  width: 58rpx;
  height: 58rpx;
  margin-left: 30rpx;
}

.forum-invitation {
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  padding: 32rpx 34rpx;
  background: #FFFFFF;
  margin: 14rpx auto;
  overflow: hidden;
}
.poster-info-wrap {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.poster-profile-name {
  flex: 1;
  display: flex;
  align-items: center;
}
.poster-profile-icon {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
}
.poster-name {
  font-size: 22rpx;
  font-family: PingFangSC, PingFang SC;
  font-weight: 400;
  color: rgba(0,0,0,0.8);
  line-height: 30rpx;
  margin-left: 8rpx;
}
.poster-date {
  font-size: 22rpx;
  font-family: PingFangSC, PingFang SC;
  font-weight: 400;
  color: rgba(0,0,0,0.4);
  line-height: 30rpx;
}
.forum-detail-wrap {
  display: flex;
  justify-content: space-between;
  margin-top: 32rpx;
}
.detail-content-image-icon {
  width: 164rpx;
  height: 164rpx;
  border-radius: 8rpx;
  margin-left: 16rpx;
}
.detail-cont-box {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  overflow: hidden;
}
.forum-content-info {
  font-size: 34rpx;
  font-family: PingFangSC, PingFang SC;
  font-weight: 500;
  color: rgba(0,0,0,0.8);
  line-height: 48rpx;
  overflow: hidden;
  display:-webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.invitation-data {
  font-size: 22rpx;
  font-family: PingFangSC, PingFang SC;
  font-weight: 400;
  color: rgba(0,0,0,0.5);
  line-height: 30rpx;
}
.invitation-data-value {
  margin-right: 16rpx;
}
.invitation-data-value::after {
  content: "Â·";
  margin-left: 16rpx;
}